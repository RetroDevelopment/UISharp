<?xml version="1.0" encoding="utf-8" ?>
<mainWindow width="800" height="600" title="UISharp IDE">
    <gridLayout id="mainLayout" rows="1" columns="3" columnSizes="200px;*;250px">
        <gridLayout id="controlLayout" rows="8" columns="1" rowSizes="40px;40px;30px;30px;30px;200px;50px;*">
            <gridLayout id="fileInput" rows="1" columns="2" columnSizes="50px;*">
                <label text="File:" />
                <editBox id="file" autoWidth="stretch" text="calculator.xml" />
            </gridLayout>
            <gridLayout id="theme" rows="1" columns="2" columnSizes="120px;*">
                <label id="darkModeText" text="Dark mode:" />
                <checkBox id="darkMode" checked="true" />
            </gridLayout>

            <button id="load" text="Load" autoWidth="stretch" autoHeight="stretch" />
            <button id="save" text="Save" autoWidth="stretch" autoHeight="stretch" enabled="false" />
            <button id="refresh" text="Refresh" autoWidth="stretch" autoHeight="stretch" enabled="false" />

            <listBox id="components" autoWidth="stretch" autoHeight="stretch" />

            <gridLayout id="addremove" rows="1" columns="2">
                <button id="add" text="Add" autoWidth="stretch" autoHeight="stretch" enabled="false" />
                <button id="remove" text="Remove" autoWidth="stretch" autoHeight="stretch" enabled="false" />
            </gridLayout>

            <treeBox id="astTreeBox" autoWidth="stretch" autoHeight="stretch" />
        </gridLayout>

        <scrollView id="preview" autoWidth="stretch" autoHeight="stretch" />
        <listBox id="propertyList" autoWidth="stretch" autoHeight="stretch" />
    </gridLayout>
</mainWindow>
