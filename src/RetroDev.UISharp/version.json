{
  "version": "0.0",
  "assemblyVersion": "0.0.0",
  "publicReleaseRefSpec": [ "refs/heads/main" ],
  "nuGetPackageVersion": "0.0.$(BuildNumber)",
  "informationalVersion": "$(Version)-$(CommitId)",

  "branches": {
    "main": {
      "version": "0.0", // Make sure this is updated before releasing
      "increment": "Patch",
      "informationalVersion": "$(Version)"
    },
    "*": {
      "version": "0.0",
      "increment": "Patch",
      "informationalVersion": "$(Version)-$(CommitId)"
    }
  },

  "tagPrefix": "v"
}
